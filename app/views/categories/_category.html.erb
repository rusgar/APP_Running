<div class="flex justify-between " id="<%= dom_id category %>">  
      <div class=" w-1/3  rounded-2xl  cursor-text text-center  my-4  py-2  text-gray-600 bg-white ">  
      <%= category.name %> 
      </div>

   

      <div class=" w-1/3  rounded-2xl  cursor-text text-center my-4  py-2 transition ease-in-out delay-150  hover:-translate-y-0 hover:scale-75 hover:bg-green-300 duration-300  ">   
        <%= link_to t('.edit'), edit_category_path(category) %>       
     </div>
    

      <div class=" w-1/3  rounded-2xl  cursor-text text-center my-4  py-2 transition ease-in-out delay-150  hover:-translate-y-0 hover:scale-75 hover:bg-red-300 duration-300 ">   
        <%= link_to t('.delete'), category_path(category), data: {
        turbo_method: :delete,
        turbo_confirm: t('common.confirm')
        } %>
      </div>

  
 
 
</div>