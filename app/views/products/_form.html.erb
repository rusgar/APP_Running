<%= form_with model: @product do |form| %>
  <% @product.errors.full_messages.each do |error| %>
    <div>
      <%= error %>
    </div>
  <% end %>

<div class="font-bold mb-4 text-orange-400">
  <div >
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div >
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div >
    <%= form.label :price %>
    <%= form.number_field :price,step: 0.01 %>
  </div>

  <div >
    <%= form.label :category_id, :Seccion %>
    <%= form.collection_select :category_id, Category.all.order(name: :asc), :id, :name %>
  </div>

  <div >
    <%= form.label :image %>
    <%= form.file_field :image %>
  </div>
</div>
  <%= form.submit t('.Create') %>
<% end %>