<div id="favorite">
    <% if product.favorite %>
     <%= link_to '❌💔', favorites_path( product.id), data: {
      turbo_method: :delete,
      turbo_confirm: t('common.confirm')
  
     } %>
    <% else %>
     <%= link_to '✅💘', favorites_path(product_id: product.id), data: {
       turbo_method: :post
     } %>
    <% end %>
</div>