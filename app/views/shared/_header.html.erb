<div class="bg-white flex justify-between items-center px-2" data-controller="menu">
  <%= link_to products_path do %>
    <h1 class=" mx-2 text-2xl font-bold text-orange-600"><%= t('app_name') %></h1>
    <% end %>

  <button class =" sm:hidden top-0 right-0 " data-action="click->menu#open" >
  <%= image_tag 'icons/menu.svg', width: 40, height:40 %>
  </button>

  <div class="hidden sm:block">
      <%= render partial: "shared/items" %>
  </div>
  <!-- Menu para el Mobile!-->
  <div class = "gap-x-2 sm:hidden absolute bg-white top-0 right-0  z-10 h-full  flex flex-col  min-w-[55%] overflow-y-scroll ease-in-out duration-200 p-5 translate-x-full " data-menu-target="items" >
      <button class="mb-4" data-action="click->menu#close"><%= image_tag 'icons/close.svg', width: 35, height:35 %>
      <%= render partial: "shared/items" %>
  </div>
  <div class ="hidden sm:block  text-orange-600">Fecha: <%= Date.today %></div>
</div>
    